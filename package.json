{
  "name": "voting-server",
  "version": "1.0.0",
  "description": "Server application that is in charge of collecting and performing all the voting operations",
  "main": "index.js",
  "engines": {
    "node": "5.10.1",
    "npm": "3.8.3"
  },
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text --reporter=html npm run run-tests",
    "run-tests": "mocha --compilers js:babel-core/register --require ./test/testHelper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "start": "babel-node index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [],
  "author": "jfcorugedo",
  "license": "ISC",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.7.7",
    "babel-core": "6.7.7",
    "babel-preset-es2015": "6.6.0",
    "chai": "3.5.0",
    "chai-immutable": "1.5.4",
    "mocha": "2.4.5",
    "nyc": "6.4.4",
    "coveralls": "2.11.9"
  },
  "dependencies": {
    "immutable": "3.8.1",
    "redux": "3.5.2",
    "socket.io": "1.4.5"
  },
  "nyc"            : {
    "extension": [
      ".jsx"
    ]
  }
}
